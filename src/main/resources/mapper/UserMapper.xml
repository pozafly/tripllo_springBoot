<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pozafly.tripllo.user.dao.UserDao">

    <select id="readUser" parameterType="String" resultType="com.pozafly.tripllo.user.model.User">
        select
            id,
            password,
            email,
            name,
            picture,
            social,
            bio,
            recent,
            favorite,
            role,
            created_at,
            created_by,
            updated_at,
            updated_by
        from user
        where id = #{id}
    </select>

    <select id="readInviteUser" parameterType="String" resultType="com.pozafly.tripllo.user.model.response.UserApiResponse">
        select
            id,
            email,
            name,
            picture
        from user
        where id like CONCAT('%', #{id}, '%')
    </select>

    <insert id="createUser" parameterType="com.pozafly.tripllo.user.model.response.UserApiResponse">
        insert into user
        values (#{id}, #{password}, #{email}, #{name}, #{picture}, #{social}, null, null, null, 'ROLE_USER', now(), #{id}, null, null)
    </insert>

    <update id="updateUser" parameterType="Map">
        update user
        set
            <if test='email != null and !"".equals(email)'>
                email = #{email},
            </if>
            <if test='name != null and !"".equals(name)'>
                name = #{name},
            </if>
            <if test='picture != null and !"".equals(picture)'>
                picture = #{picture},
            </if>
            <if test='bio != null and !"".equals(bio)'>
                bio = #{bio},
            </if>
            <if test='recent != null and !"".equals(recent)'>
                recent = #{recent},
            </if>
            <if test='favorite != null and !"".equals(favorite)'>
                favorite = #{favorite},
            </if>
            updated_at = now(),
            updated_by = #{id}
        where id = #{id}
    </update>

    <delete id="deleteUser" parameterType="Map">
        delete from user
        where id = #{userId}
    </delete>

</mapper>