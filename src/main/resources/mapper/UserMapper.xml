<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pozafly.tripllo.user.dao.UserDao">

    <select id="readUser" parameterType="String" resultType="com.pozafly.tripllo.user.model.User">
        select
        id,
        password,
        email,
        name,
        picture,
        social,
        role,
        created_at,
        created_by,
        updated_at,
        updated_by
        from user
        where id = #{id}
    </select>

    <insert id="createUser" parameterType="com.pozafly.tripllo.user.model.response.UserApiResponse">
        insert into user
        values (#{id}, #{password}, #{email}, #{name}, #{picture}, #{social}, 'USER', now(), #{id}, null, null)
    </insert>

    <update id="updateUser" parameterType="Map">
        update user
        set
            <if test='email != null and !"".equals(email)'>
                email = #{email},
            </if>
            <if test='name != null and !"".equals(name)'>
                name = #{name},
            </if>
            <if test='picture != null and !"".equals(picture)'>
                picture = #{picture},
            </if>
            updated_at = now(),
            updated_by = #{userId}
        where id = #{userId}
    </update>

    <delete id="deleteUser" parameterType="Map">
        delete from user
        where id = #{userId}
    </delete>

</mapper>